<h1><%= @cheese.milk_type %></h1>

<p><%= @cheese.description %></p>

<%= link_to "Back to cheeses", cheeses_path %> |
<%= link_to "Edit", edit_cheese_path(@cheese) %> |
<form action="<%= cheese_path(@cheese) %>" method="POST">
  <input type="hidden" name="_method" value="DELETE" />
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
  <input type="submit" value="Eat This Cheese" />
</form>
