<h1>Create a Cheese!</h1>

<form action="<%= cheeses_path %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

  <label for="name">Title</label>
  <br>
  <input id="name" type="text" name="cheese[name]" />
  <br>

  <label for="milk_type">Milk Type</label>
  <br>
  <input id="milk_type" type="text" name="cheese[milk_type]" />
  <br>

  <label for="description">Description</label>
  <br>
  <textarea id="description" name="cheese[description]"></textarea>
  <br>



  <input type="submit" value="Save" /> | <%= link_to "Cancel", cheeses_path %>
</form>
